<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :name %>
    <%= f.input :group_id %>
    <%= f.input :only_alive_word %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
