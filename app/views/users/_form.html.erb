<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

<div class="row">
  <div class="large-8 columns">
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :age %>
      <%= f.input :gender, collection: [:male, :female] %>
      <%= f.association :student_group %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>  
  </div>
</div>

<% end %>
