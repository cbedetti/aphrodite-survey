<h1>Listing question_groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_groups.each do |question_group| %>
      <tr>
        <td><%= question_group.name %></td>
        <td><%= question_group.student_group_id %></td>
        <td><%= link_to 'Show', question_group %></td>
        <td><%= link_to 'Edit', edit_question_group_path(question_group) %></td>
        <td><%= link_to 'Destroy', question_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

